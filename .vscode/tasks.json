{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Python REPL",
            "type": "shell",
            "command": "python -i ${file} ",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python",
            "type": "shell",
            "command": "python ${file}",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "python ${fileBasenameNoExtension}_test.py",
            "options": {
                "cwd": "/test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Python In Test Mode",
            "type": "shell",
            "command": "python ${file} test",
            "options": {
                "cwd": "/test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Convert from .ui to .py",
            "type": "shell",
            "command": "pyuic5 ${file} -o ${fileBasenameNoExtension}.py",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Test .docx generation",
            "type": "shell",
            "command": "python ${file} ${fileBasenameNoExtension} & ${fileBasenameNoExtension}.docx",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}